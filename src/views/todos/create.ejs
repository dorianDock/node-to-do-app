<div class="col-md-12">
    <form name="createTodo" action="/todos/createToDo" method="post">
        <div class="form-group">
            <input name="title" class="form-control" id="title" placeholder="Clean the room">
        </div>
        <div class="form-group">
            <input name="shortExplanation" class="form-control" id="shortExplanation" placeholder="I should hoover a little, then maybe clean my desk...">
        </div>
        <div class="form-group">
            <input type="datetime" name="deadline" class="form-control" id="deadline" placeholder="11/12/2017, 8h00">
        </div>
        <input class="btn btn-success" type="submit" value="I finished">
    </form>
</div>